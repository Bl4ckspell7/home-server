# Auto-generated by Ansible
# Watches Jellyfin media directories for permission enforcement

set -euo pipefail

# Directories to watch
WATCH_PATHS=(
{% for path in jellyfin_media_paths %}
    "{{ path }}"
{% endfor %}
)

# Start watching recursively for file changes
while inotifywait -r -e create,modify,move,delete "${WATCH_PATHS[@]}"; do
    /usr/local/bin/jellyfin-set-permissions.sh
done
